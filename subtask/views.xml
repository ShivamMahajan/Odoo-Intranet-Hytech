<record id="edit_view_task_form2" model="ir.ui.view">
            <field name="name">edit.project.task.form</field>
            <field name="model">project.task</field> 
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
            <h1 position="before">
              <field name="task_name"/>
            </h1>
          </field>
        </record>

<record id="edit_view_task_search_form" model="ir.ui.view">
            <field name="name">edit.project.task.search.form</field>
            <field name="model">project.task</field>
             <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
              
               <filter string="Task" position="after">
                
                <filter string="Subtask" context="{'group_by':'task_name'}"/>
                  </filter>
                </field>
              </record>


<record model="ir.module.category" id="module_my_gourp_category">
        <field name="name">My Group Category</field>
        <field name="description">Group Description.</field>
        <field name="sequence">10</field>
    </record>

    <record id="my_group" model="res.groups">
    <field name="name">My Group</field>
    <field name="category_id" ref="module_my_gourp_category"/>
</record>
